@model AssociationWebApp.Models.Company

@{
    ViewData["Title"] = "Detalhes da Empresa";
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cnpj)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Associations)
        </dt>
        @foreach (var item in Model.Associations)
        {
            <dt>
                @Html.DisplayFor(itemModel => item.Associated.Name)
            </dt>
        }
    </dl>
</div>
<br />
<div>
    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> 
    <a class="btn btn-default btn-sm" asp-action="Index">Voltar</a>
</div>
