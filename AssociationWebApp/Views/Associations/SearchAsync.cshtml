@model IEnumerable<AssociationWebApp.Models.Association>
@{
    ViewData["Title"] = "Pesquisa";
}

<h2>@ViewData["Title"]</h2>


<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <form class="navbar-form navbar-left font-color-white">
                <div class="form-group">
                    <label for="name">Nome</label>
                    <input name="name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="cpf">CPF</label>
                    <input name="cpf" type="text" class="form-control">
                </div>
                <button type="submit" class="btn btn-default">Pesquisar</button>
            </form>
        </div>
    </div>
</nav>
<div class="panel-body">
    <table class="table">
        <thead>
            <tr>
                <th>Associado</th>
                <th>Empresa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Associated.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Company.Name)</td>
                <td><button class="btn btn-danger btn-sm delete" data-id="@item.AssociatedId">Apagar</button></td>
            </tr>
            }

        </tbody>
    </table>
</div>
<a class="btn btn-default btn-sm" asp-action="Index">Voltar</a>