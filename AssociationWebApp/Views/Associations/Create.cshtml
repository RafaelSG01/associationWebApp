@model AssociationWebApp.Models.Association
@{
    ViewData["Title"] = "Adicionar Associação";
}

<h2>@ViewData["Title"]</h2>
<div class="container">
    <div class="co-md-10">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">@ViewData["Title"]</h4>
            </div>
            <div class="modal-body">
                <hr />
                <h4>Associar</h4>
                <hr />
                <div class="row">
                    <div class="col-md-5">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="AssociatedId" class="control-label"></label>
                                <select asp-for="AssociatedId" class="form-control" asp-items="ViewBag.AssociatedId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="CompanyId" class="control-label"></label>
                                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Adicionar" class="btn btn-default btn-sm" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Cancelar" class="btn btn-danger btn-sm" data-dismiss="modal" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Retornar para a lista", "Index")
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
